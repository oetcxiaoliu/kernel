/dts-v1/;

#include "rk3036.dtsi"

/ {
	model = "Rockchip RK3036 Nand Flash Demo Board";
	compatible = "rockchip,rk3036-nand-demo", "rockchip,rk3036";

	sound {
		compatible = "rockchip,rockchip-audio-rk3036";
		rockchip,model = "I2S-INNO-RK3036";
		rockchip,i2s-controller = <&i2s0>;
		rockchip,audio-codec = <&acodec>;
	};

	sound_spdif {
		compatible = "rockchip,rockchip-spdif-card";
		rockchip,model = "SPDIFCARD-ROCKCHIP";
		rockchip,spdif-controller = <&spdif>;
		rockchip,audio-codec = <&spdif_out>;
	};

	spdif_out: spdif-out {
		compatible = "linux,spdif-dit";
		#sound-dai-cells = <0>;
	};

	usb_control {
		compatible = "rockchip,rk3036-usb-control";
		wifipwr-gpios = <&gpio2 7 GPIO_ACTIVE_LOW>;
	};
};

&memory {
	device_type = "memory";
	reg = <0x60000000 0x20000000>;
};

&nandc {
	status = "okay";
};

&acodec {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2s0 {
	status = "okay";

	clock-names = "i2s_hclk", "i2s_clk", "i2s_clk_out";
	clocks = <&cru HCLK_I2S>, <&cru SCLK_I2S>, <&cru SCLK_I2S_OUT>;
};

&i2s1 {
	status = "okay";

	clock-names = "i2s_hclk", "i2s_clk", "i2s_clk_out";
	clocks = <&cru HCLK_I2S>, <&cru SCLK_I2S>, <&cru SCLK_I2S_OUT>;
};

&spdif {
	status = "okay";
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&usb_host {
	status = "okay";
};

&usb_otg {
	status = "okay";

	dr_mode = "host";
};

&emac {
	assigned-clocks = <&cru SCLK_MACPLL>;
	assigned-clock-parents = <&cru PLL_APLL>;
	pinctrl-names = "default";
	pinctrl-0 = <&emac_xfer>, <&emac_mdio>, <&rmii_rst>;
	phy = <&phy0>;
	status = "okay";

	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&pinctrl {
	pcfg_output_high: pcfg-output-high {
		output-high;
	};

	emac {
		rmii_rst: rmii-rst {
			rockchip,pins = <2 22 RK_FUNC_GPIO &pcfg_output_high>;
		};
	};
};
